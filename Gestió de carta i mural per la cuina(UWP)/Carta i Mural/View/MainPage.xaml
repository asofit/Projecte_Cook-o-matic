<Page
    x:Class="Carta_i_Mural.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Carta_i_Mural.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView x:Name="nvwNavigationBar" IsSettingsVisible="False" ItemInvoked="NvwNavigationBar_ItemInvoked">
        <NavigationView.MenuItems>
            <NavigationViewItem Tag="carta" Content="Carta"></NavigationViewItem>
            <NavigationViewItem Tag="mural" Content="Mural"></NavigationViewItem>
        </NavigationView.MenuItems>
        <Frame x:Name="frmPage" Background="Transparent"></Frame>
    </NavigationView>
</Page>
